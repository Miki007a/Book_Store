@model Book_Store.Models.FoodDelivery.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    var totalprice = 0;
    var priceqty = 0;
} 
<style>
    .gradient-custom {


}
</style>
<<section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-10 col-xl-8">
                <div class="card" style="border-radius: 10px;">
                    <div class="card-header px-4 py-5">
                        <h5 class="text-muted mb-0">Thanks for your Order, <span style="color: #a8729a;">@Model.Customer.FirstName</span>!</h5>
                    </div>
                    <div class="card-body p-4">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <p class="lead fw-normal mb-0" style="color: #a8729a;">Receipt</p>
                            <p class="small text-muted mb-0">Receipt Voucher : @Model.Id</p>
                        </div>

                        @for (int i = 0; i < Model.ItemsInOrder.Count(); i++)
                        {
                            var item = Model.ItemsInOrder.ElementAt(i).Item;
                             totalprice += Model.ItemsInOrder.ElementAt(i).Quantity * item.Price;
                            priceqty = item.Price * Model.ItemsInOrder.ElementAt(i).Quantity;
                            <div class="card shadow-0 border mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <img src="@item.Restaurant?.RestaurantImage" class="img-fluid" alt="Restaurant Image">
                                        </div>
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0">@item.ItemName</p>
                                        </div>
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">@item.ItemDescription</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">Qty: @Model.ItemsInOrder.ElementAt(i).Quantity</p>
                                        </div>
                                        <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">@priceqty Ден</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                        <div class="d-flex justify-content-between pt-2">
                            <p class="fw-bold mb-0">Order Details</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Total</span> @totalprice Ден</p>
                        </div>


                        <div class="d-flex justify-content-between">
                            <p class="text-muted mb-0">Invoice Date : </p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">GST 18%</span> 123</p>
                        </div>

                        <div class="d-flex justify-content-between mb-5">
                            <p class="text-muted mb-0">Receipts Voucher : @Model.Id</p>
                            <p class="text-muted mb-0"><span class="fw-bold me-4">Delivery Charges</span> Free</p>
                        </div>
                    </div>
                    <div class="card-footer px-4 py-5" style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total paid: <span class="h2 mb-0 ms-2">@totalprice Ден</span></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

