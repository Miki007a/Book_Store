<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="project-info-box mt-0">
                <h5>Author's Description</h5>
                <p class="mb-0">@Model.Description</p>
            </div><!-- / project-info-box -->

            <div class="project-info-box">
                <p><b>Name:</b> @Model.Name</p>

            </div><!-- / project-info-box -->

            
        </div><!-- / column -->

        <div class="col-md-7">
         
            <div class="project-info-box">
                <h5 class="text-center">My Books</h5>
                <table class="table table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.BookAuthors)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Book.Title)</td>
                                <td>@Html.DisplayFor(modelItem => item.Book.Price) Ден</td>
                                <td>@Html.DisplayFor(modelItem => item.Book.Description)</td>
                                <td class="m-auto px-auto d-flex justify-content-center">
                                    <a asp-action="DeleteBook" asp-route-id="@item.Id" class="btn btn-danger" style="margin-left:17%">Remove Book</a>
                                    <a asp-action="EditBook" asp-route-id="@item.Book.Id" class="btn btn-warning" style="margin-left:17%">Edit Book</a>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="d-flex justify-content-center">
                <a asp-action="AddBook" asp-route-id="@Model?.Id" class="btn btn-success" style="margin-right:3%">Add New Book</a>
                <a asp-action="Index" asp-controller="Home" class="btn btn-icon btn-brown">Back To Home</a>
             

                <div/>
            </div><!-- / project-info-box -->
        </div><!-- / column -->
