@model Book_Store.Models.DTO.BookAuthorDTO
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

	
	<!--===============================================================================================-->
	<link rel="icon" type="image/png" href="/images/icons/favicon.ico" />
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/bootstrap/css/bootstrap.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/animate/animate.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/css-hamburgers/hamburgers.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/vendor/select2/select2.min.css">
	<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">
	<!--===============================================================================================-->
<div class="contact1">
    <div class="container-contact1">
        <div class="contact1-pic js-tilt" data-tilt>
            <img src="/images/Surfer.png" alt="IMG">
        </div>

        <form class="contact1-form validate-form" asp-action="AddBook" method="post">
            <span class="contact1-form-title">
                Add Your Own Book
            </span>

            <div class="wrap-input1 validate-input" data-validate="Price is required">
                <label asp-for="Price" class="control-label"></label>
                <input class="input1 form-control" type="number" name="Price" placeholder="Price" asp-for="Price">
                <span class="shadow-input1"></span>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Title is required">
                <label asp-for="Title" class="control-label"></label>
                <input class="input1 form-control" type="text" name="Title" placeholder="Title" asp-for="Title">
                <span class="shadow-input1"></span>
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Description is required">
                <label asp-for="Description" class="control-label"></label>
                <textarea class="input1 form-control" name="Description" placeholder="Description" asp-for="Description"></textarea>
                <span class="shadow-input1"></span>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="wrap-input1 validate-input" data-validate="Image URL is required">
                <label asp-for="ImageUrl" class="control-label"></label>
                <input class="input1 form-control" type="text" name="ImageUrl" placeholder="Your Image URL" asp-for="ImageUrl">
                <span class="shadow-input1"></span>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <input type="hidden" value="@Model.AuthorId" name="AuthorId" />

            <div class="container-contact1-form-btn">
                <button class="contact1-form-btn">
                    <span>
                        Add Book
                        <i class="fa fa-long-arrow-right" aria-hidden="true"></i>
                    </span>
                </button>
            </div>
        </form>
    </div>
</div>




	<!--===============================================================================================-->
	<script src="/vendor/jquery/jquery-3.2.1.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/bootstrap/js/popper.js"></script>
	<script src="/vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/select2/select2.min.js"></script>
	<!--===============================================================================================-->
	<script src="/vendor/tilt/tilt.jquery.min.js"></script>
	<script>
		$('.js-tilt').tilt({
			scale: 1.1
		})
	</script>

	<!-- Global site tag (gtag.js) - Google Analytics -->
	<script async src="https://www.googletagmanager.com/gtag/js?id=UA-23581568-13"></script>
	<script>
		window.dataLayer = window.dataLayer || [];
		function gtag() { dataLayer.push(arguments); }
		gtag('js', new Date());

		gtag('config', 'UA-23581568-13');
	</script>

	<!--===============================================================================================-->
	<script src="/js/main.js"></script>



@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
